mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, description)
  img(src=require(`images/${path}`) class=className alt=description)

mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item, ndx in items 
        li(class=`${className}__item` + ( (ndx === activeItem) ? ` ${className}__item_active` : '') ) 
          a(class=`${className}__link` href='#')= item

mixin offer(className, items, activeItem)
    ul(class=`${className}__list`)
      each item, ndx in items 
        li(class=`${className}__item` + ( (ndx === activeItem) ? ` ${className}__item_active` : '') ) 
          span(class=`${className}__link`) 
            span(class=`${className}__text`) #{item.name}
          span(class=`${className}__link-info`) #{item.info}
          a(class=`${className}__link-href` href=`${item.link}`) visit website

